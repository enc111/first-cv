  margin 3.38% 0 0 23.55%
  circle 15rem header-color
  box-shadow inset 0 0 0 1px header-color,
    inset 0 0 0 0.82rem #ffffff

.person__name-inf
  border-collapse collapse
  margin 1.77rem 0 4.77rem 4.84rem
  padding 0

.person__name-inf.tr
  border-width 0
  padding 0
  line-height 0

.person__name-inf.td
  border-width 0
  line-height 0
  font-weight normal
  padding 0

.person__name-inf-name
  font-size 3.42rem
  line-height 3.35rem
  padding 0

.person__name-inf-surname
  font-weight-bold()
  font-size 3.27rem
  line-height 3.55rem

.person__name-inf-prof-name
  font-size 1.61rem
  font-weight-bold()
  text-align center
  padding-top 0.58rem