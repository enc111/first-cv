@font-face
  font-family MyriadPro
  src url("fonts/MyriadProRegular.ttf"),
    url("fonts/MyriadProRegular.woff"),
    url("fonts/MyriadProRegular.svg")

@font-face
  font-family MyriadProBold
  src url("fonts/MyriadProBold.ttf")

header-color=#3d6cb0
header-circles-color=#3f6fb6
points-base-color=#e6e6e6

circle(n, color)
  width n
  height n
  border-radius 50%
  background-color color

clearfix()
  content ""
  display block
  clear both
  visibility hidden
  height 0

background-icon(path, n = 60%)
  background-image url(path)
  background-size n
  background-position 50% 50%
  background-repeat no-repeat

font-weight-bold()
  font-weight bold
  font-family MyriadProBold

body
  font-family MyriadPro

h1
  font-size 2.65rem
  font-weight-bold()
  color header-color
  display flex
  align-items center
  line-height 1.77rem
  margin 0

h1::before
  content ""
  display inline-block
  color #ffffff
  font-size 4.19rem
  line-height 4.68rem
  padding auto 0
  text-align center
  circle 4.68rem header-circles-color
  box-shadow inset 0 0 0 1px header-circles-color,
    inset 0 0 0 0.25rem #ffffff
  margin 0
  margin-right 0.68rem

h1::after
  content ''
  display inline-block
  height 0.32rem
  flex-grow 1
  background-color header-color
  margin 0

h2
li span
  font-size 1.65rem
  font-weight normal
  margin 0

ul
  list-style none
  padding 0
  margin 1.77rem 0 3.42rem 0.806rem

li p
li h2
  margin-left 2.58rem

li h2
  margin-bottom 0.32rem

li p
  margin-bottom 0.92rem

li::before
  content ''
  display inline-block
  circle 1.29rem #000000
  margin-right 1.24rem

li span:nth-of-type(2)
  padding-left 1rem

p
  font-size 1rem
  margin 0

li span:first-child
  font-weight-bold()

.column
  margin 6.1% 0 5.5% 4.6%

.column::after
  clearfix()

@media only screen and (min-width: 950px) and (max-width: 1920px)
  html
    width 100%
  .column
    width 92.4%
  .column-1
    width 37.1%
    float left
    margin 0
    padding 0
  .column-2
    width 56.38%
    float right
    margin 0
    padding 0

@media only screen and (min-width: 801px) and (max-width: 1023px)
  html
    font-size 16px

@media only screen and (min-width: 1024px) and (max-width: 1400px)
  html
    font-size 17px

@media only screen and (min-width: 1600px) and (max-width: 1920px)
  html
    font-size 21px

@media only screen and (min-width: 550px)and (max-width: 949px)
 html
    width 100%
  .column-1
  .column-2
    float none
    width 100%

@media only screen and (min-width: 600px) and (max-width: 800px)
 html
    font-size 14px

@media only screen and (min-width: 550px) and (max-width: 599px)
 html
    font-size 12px

