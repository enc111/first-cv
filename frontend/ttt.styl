@font-face
  font-family MyriadPro
  src url("./MyriadProRegular.ttf")

header-color=#3d6cb0

body
  font-family MyriadPro

h1
  font-size 82 px
  color header-color

h2
li span
  font-size 51 px
  font-weight normal

p
    font-size 31 px

li span:first-child
  font-weight bold

.column
  columns 2

.name-inf
  border-collapse collapse

.name-inf.tr
  height 104 px
  border-width 0

.name-inf.td
  border-width 0
  line-height 0
  font-weight normal

.name-inf-name
  font-size 104 px

.name-inf-surname
  font-weight bold
  font-size 123 px

.name-inf-prof-name
  font-size 50 px
  font-weight bold

.profile-bold
  font-weight bold

.contact-tab
  font-size 41 px
  text-align left

.contact-tab th
  color header-color
  font-weight bold

.contact-tab td
  padding-left 50 px

.software-column
  columns 2

.education-degree
  color header-color
