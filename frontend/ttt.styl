@font-face
  font-family MyriadPro
  src url("fonts/MyriadProRegular.ttf"),
    url("fonts/MyriadProRegular.woff"),
    url("fonts/MyriadProRegular.svg")

header-color=#3d6cb0
header-circles-color=#3f6fb6
points-base-color=#e6e6e6

circle(n, color)
  width n
  height n
  border-radius 50%
  background-color color

body
  font-family MyriadPro
  width 2480px
  height 3508px

h1
  font-size 82px
  color header-color
  display flex
  align-items center
  line-height 130px

h1::before
  content ""
  display inline-block
  color #ffffff
  font-size 130px
  text-align center
  circle 130px header-circles-color
  box-shadow 0 0 0 7px #ffffff,
    0 0 0 9px header-circles-color
  margin-right 26px

h1::after
  content ''
  display inline-block
  height 10px
  flex-grow 1
  background-color header-color

h2
li span
  font-size 51px
  font-weight normal

ul
  list-style none

li::before
  content ''
  display inline-block
  circle 40px #000000
  margin-right 45px

.big-circle
  margin-top 176px
  margin-left 320px
  circle 405px header-color
  box-shadow 0 0 0 28px #ffffff,
    0 0 0 30px header-color

p
    font-size 31px

li span:first-child
  font-weight bold

.column
  -webkit-columns 2
  -moz-columns 2
  columns 2
  -webkit-column-gap 153px
  -moz-column-gap 153px
  column-gap 153px
  margin-left 125px
  margin-right 115px
  margin-bottom 190px

.name-inf
  border-collapse collapse
  margin-top 75px
  margin-left 275px

.name-inf.tr
  height 104px
  border-width 0

.name-inf.td
  border-width 0
  line-height 0
  font-weight normal

.name-inf-name
  font-size 104px

.name-inf-surname
  font-weight bold
  font-size 123px

.name-inf-prof-name
  font-size 50px
  font-weight bold

.name-inf-prof-name
  text-align center

.profile-bold
  font-weight bold

