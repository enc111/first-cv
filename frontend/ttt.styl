@font-face
  font-family MyriadPro
  src url("fonts/MyriadProRegular.ttf"),
    url("fonts/MyriadProRegular.woff"),
    url("fonts/MyriadProRegular.svg")

@font-face
  font-family MyriadProBold
  src url("fonts/MyriadProBold.ttf")

header-color=#3d6cb0
header-circles-color=#3f6fb6
points-base-color=#e6e6e6

circle(n, color)
  width n
  height n
  border-radius 50%
  background-color color

font-weight-bold()
  font-family MyriadProBold
  font-weight bold

body
  font-family MyriadPro
  width 2480px
  height 3508px

h1
  font-size 82px
  font-weight-bold()
  color header-color
  display flex
  align-items center
  line-height 145px
  margin 0
  //margin-bottom 15px

h1::before
  content ""
  display inline-block
  color #ffffff
  font-size 130px
  line-height 145px
  padding auto 0
  text-align center
  circle 145px header-circles-color
  box-shadow inset 0 0 0 1px header-circles-color,
    inset 0 0 0 8px #ffffff
  margin 0
  margin-right 21px

h1::after
  content ''
  display inline-block
  height 10px
  flex-grow 1
  background-color header-color
  margin 0

h2
li span
  font-size 51px
  font-weight normal
  margin 0

ul
  list-style none
  padding 0
  margin 55px 0 105px 25px

li p
li h2
  margin-left 80px

li::before
  content ''
  display inline-block
  circle 40px #000000
  margin-right 45px

p
  font-size 31px
  margin 0

li span:first-child
  font-weight-bold()

.column
  margin 153px 115px 190px 110px

.software::after
.column::after
  content ""
  display block
  clear both
  visibility hidden
  height 0

.column-1
  width 828px
  float left

.column-2
  width 1264px
  float right

.big-circle
  margin 28px 0 0 195px
  circle 465px header-color
  box-shadow inset 0 0 0 2px header-color,
    inset 0 0 0 30px #ffffff

.name-inf
  border-collapse collapse
  margin 55px 0 148px 150px
  padding 0

.name-inf.tr
  border-width 0
  padding 0
  line-height 0

.name-inf.td
  border-width 0
  line-height 0
  font-weight normal
  padding 0

.name-inf-name
  font-size 106px
  line-height 104px
  padding 0

.name-inf-surname
  font-weight-bold()
  font-size 123px
  line-height 110px

.name-inf-prof-name
  font-size 50px
  font-weight-bold()
  text-align center
  padding-top 18px

.profile-bold
  font-weight-bold()

.profile_text
  padding 0
  margin 23px 0 90px 0
  line-height 37px

.pofile h1::after
  margin-left 20px

.contact h1::before
